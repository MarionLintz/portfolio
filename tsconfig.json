{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["dom", "esnext"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "allowJs": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "exclude": ["node_modules", "public", ".cache"]
  }